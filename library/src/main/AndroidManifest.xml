<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.okhttpinspector.spring">
    <application>
        <provider
            android:name="com.okhttpinspector.spring.internal.data.SpringContentProvider"
            android:authorities="${applicationId}.chuck.provider"
            android:exported="false" />
        <activity
            android:name="com.okhttpinspector.spring.internal.ui.SpringMainActivity"
            android:label="@string/spring_name"
            android:launchMode="singleTask"
            android:taskAffinity="com.okhttpinspector.spring.task"
            android:theme="@style/Spring.Theme" />
        <activity android:name="com.okhttpinspector.spring.internal.ui.SpringTransactionActivity"
            android:theme="@style/Spring.Theme"
            android:parentActivityName="com.okhttpinspector.spring.internal.ui.SpringMainActivity"/>
        <service
            android:name="com.okhttpinspector.spring.internal.support.ClearTransactionsService"
            android:exported="false" />
    </application>
</manifest>